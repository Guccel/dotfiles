# Autostart daemons, applets and swayidle
    exec mako &
    exec udiskie &
    # exec swayidle -w timeout 100 'swaylock -f' timeout 200 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep 'swaylock -f'


# gaps
    for_window [class=".*"] border pixel 2
    gaps inner 0
    gaps outer 0
    default_border pixel 2
    default_floating_border none


# styles - set the folder for your theme definition file
set $theme /usr/share/sway/themes/matcha-green
include $theme/definitions


# variables
    include $HOME/.config/sway/config.d/definitions


# hide cursor while typing
    seat * hide_cursor when-typing enable


# output
    output * bg $background fill
    output eDP-1 {
        resolution 1920x1080
        pos 0 0 
    }


# input
    input type:keyboard {
        xkb_layout "us"
    }

    input type:touchpad {
        dwt enabled
        tap enabled
        natural_scroll enabled
    }


# Upstream refuses to set XDG_CURRENT_DESKTOP so we have to.
    exec systemctl --user set-environment XDG_CURRENT_DESKTOP=sway
    exec systemctl --user import-environment DISPLAY \
                                             SWAYSOCK \
                                             WAYLAND_DISPLAY \
                                             XDG_CURRENT_DESKTOP

    exec hash dbus-update-activation-environment 2>/dev/null && \
         dbus-update-activation-environment --systemd DISPLAY \
                                                      SWAYSOCK \
                                                      XDG_CURRENT_DESKTOP=sway \
                                                      WAYLAND_DISPLAY


include $HOME/.config/sway/config.d/*
include $HOME/.config/sway/modes/*
